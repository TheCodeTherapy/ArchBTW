{
  "editor.tabSize": 2,
  "editor.fontSize": 18,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'NotoMono Nerd Font', 'M+CodeLat60 Nerd Font Mono', 'MesloLGS NF'",
  "editor.fontLigatures": false,

  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Bifr√∂st Night Flat",

  "workbench.activityBar.location": "top",
  "window.menuBarVisibility": "toggle",
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",

  "editor.copyWithSyntaxHighlighting": false,
  "editor.semanticHighlighting.enabled": true,
  "workbench.statusBar.visible": true,

  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.fontSize": 16,
  "window.customTitleBarVisibility": "auto",

  "editor.folding": true,
  "editor.foldingStrategy": "indentation",

  "search.exclude": {
    "package-lock.json": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },

  "files.associations": {
    "**/.i3/config": "i3",
    "**/i3/config": "i3"
  },

  "gopls": {
    "ui.semanticTokens": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },

  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },

  "[go]": {
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },

  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },

  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },


  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.editor.fontSize": 16,
  "github.copilot.preferredAccount": "TheCodeTherapy",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  "cmake.options.statusBarVisibility": "visible",
  "cmake.showOptionsMovedNotification": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.path": "/home/marcogomez/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/18.1.3/clangd_18.1.3/bin/clangd",

  "zig.path": "zig",
  "zig.zls.enabled": "on"
}